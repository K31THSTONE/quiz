<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>  
    </aside>
  </div>
  <div class="row">
    <aside class="col-md-4">
      <%= link_to "Take a Quiz", takeQuiz_path, class: "btn btn-lg btn-primary" %>
      <%= link_to "Create a Quiz", createQuiz_path, class: "btn btn-lg btn-primary" %>
    </aside>
  </div>
<% else %>

    <div class="center jumbotron">
      <h1>Welcome the Quiz App!!!!!</h1>
    
      <h2>
       This is the home page for Greg's Quiz App
      </h2>
    
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    </div>
<% end %>    
